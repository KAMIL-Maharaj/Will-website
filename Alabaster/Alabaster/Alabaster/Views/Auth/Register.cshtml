@{
    ViewData["Title"] = "Register";
}

<style>
body {
    background: url('@Url.Content("~/Images/Background2.png")') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
}

    .main-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 80px);
        padding-top: 100px;
        padding-bottom: 60px;
    }

    .auth-container {
        display: flex;
        background-color: #fff;
        border-radius: 30px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        max-width: 1000px;
        width: 100%;
        margin: auto;
        min-height: 700px;
    }

    .auth-form {
        padding: 60px 60px;
        flex: 1;
    }

    .auth-image {
        flex: 1;
        background: url('@Url.Content("~/Images/logo.jpg")') center center no-repeat;
        background-size: contain;
        background-color: #ffffff;
        min-height: 700px;
        padding: 30px;
        border-left: 1.5px solid #e5e7eb;
    }

    .auth-title {
        font-size: 32px;
        font-weight: 900;
        color: #047857;
        margin-bottom: 30px;
        text-align: center;
    }

    label.form-label {
        font-weight: 700;
        font-size: 1.15rem;
    }

    input.form-control {
        font-size: 1rem;
        padding: 10px 12px;
        border-radius: 8px;
    }

    .form-control:focus {
        border-color: #22c55e;
        box-shadow: 0 0 0 0.3rem rgba(34, 197, 94, 0.3);
    }

    button.btn-success {
        background-color: #16a34a;
        border-color: #16a34a;
        font-size: 1.15rem;
        padding: 12px 0;
        border-radius: 10px;
        font-weight: 700;
        transition: background-color 0.3s ease;
    }

    button.btn-success:hover {
        background-color: #15803d;
        border-color: #15803d;
    }

    .link-custom {
        color: #16a34a;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.05rem;
    }

    .link-custom:hover {
        text-decoration: underline;
    }

    .text-center {
        text-align: center;
        font-size: 1.05rem;
        margin-top: 20px;
    }

    .alert {
        font-size: 0.95rem;
        margin-top: 20px;
        padding: 15px 20px;
        border-radius: 10px;
    }

    @@media (max-width: 768px) {
        .auth-container {
            flex-direction: column;
            max-width: 90vw;
            min-height: auto;
        }

        .auth-image {
            height: 350px;
            border-left: none;
            border-top: 1.5px solid #e5e7eb;
            padding: 20px;
            min-height: auto;
        }

        .main-wrapper {
            padding-top: 100px;
        }

        .auth-form {
            padding: 40px 30px;
        }

        .auth-title {
            font-size: 28px;
            margin-bottom: 25px;
        }

        label.form-label,
        .link-custom,
        .text-center {
            font-size: 1rem;
        }

        input.form-control {
            font-size: 0.95rem;
            padding: 10px 12px;
        }

        button.btn-success {
            font-size: 1.1rem;
            padding: 10px 0;
        }
    }
</style>

<div class="main-wrapper">
    <div class="auth-container">
        <div class="auth-form">
            <h3 class="auth-title">Create Your Account üìù</h3>

            <form method="post">
                <div class="mb-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password (min 6 chars)" required />
                </div>
                <button type="submit" class="btn btn-success w-100">Register</button>
            </form>

            <div class="text-center">
                <span class="text-muted">Already have an account?
                    <a class="link-custom" href="/Auth/Login">Login</a>
                </span>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
        </div>

        <div class="auth-image d-none d-md-block"></div>
    </div>
</div>
