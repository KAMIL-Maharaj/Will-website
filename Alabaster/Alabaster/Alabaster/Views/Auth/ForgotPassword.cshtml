@{
    ViewData["Title"] = "Forgot Password";
}

<style>
body {
    background: url('@Url.Content("~/Images/Background2.png")') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
}

    .auth-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    .auth-card:hover {
        transform: translateY(-4px);
    }

    .btn-warning {
        background-color: #f59e0b;
        border-color: #f59e0b;
        color: white;
    }

    .btn-warning:hover {
        background-color: #d97706;
        border-color: #d97706;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(251, 191, 36, 0.25);
        border-color: #fbbf24;
    }

    .form-label {
        font-weight: 600;
    }

    .auth-title {
        font-weight: 700;
        color: #92400e;
    }

    .link-custom {
        color: #92400e;
        text-decoration: none;
    }

    .link-custom:hover {
        text-decoration: underline;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card auth-card p-4">
                <div class="card-body">
                    <h3 class="card-title text-center auth-title mb-4">Reset Your Password üîê</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email address" required />
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Send Reset Link</button>
                    </form>

                    <div class="mt-3 text-center">
                        <a class="link-custom" href="/Auth/Login">Back to Login</a>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
