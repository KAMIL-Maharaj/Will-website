@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../images/Background3.jpg') center center / cover no-repeat fixed;
            font-family: 'Poppins', Arial, sans-serif;
            color: #fff;
            min-height: 100vh;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.6);
            pointer-events: none;
            z-index: -1;
        }

        .page-content {
            padding-bottom: 5rem;
        }

        /* HERO SECTION */
        .hero {
            width: 100%;
            background: linear-gradient(135deg, #1a1a1a, #333333);
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 3rem;
            text-align: center;
        }

        .hero-content {
            max-width: 700px;
            padding: 1rem;
        }

        .hero-content h1 {
            font-size: 4rem;
            font-weight: 800;
            letter-spacing: 2px;
            color: #ffcc00;
            margin-bottom: 1rem;
            text-transform: uppercase;
        }

        .hero-content a.hero-cta {
            display: inline-block;
            margin-top: 1.5rem;
            padding: 1rem 2.5rem;
            background: #ff9800;
            color: #fff;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
        }

        .hero-content a.hero-cta:hover {
            background: #e88e00;
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.4);
        }

        /* UNIQUE SECTION TITLE */
        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 2rem;
            color: #ffcc00;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
            letter-spacing: 1px;
        }

        /* TESTIMONY GRID */
        .testimony-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 0 5%;
        }

        /* CARD STYLING */
        .testimony-card {
            background: linear-gradient(145deg, #ffffff, #f0f0f0);
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 2rem 1.5rem;
            color: #333;
            min-height: 420px;
        }

        .testimony-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .testimony-card img {
            width: 100%;
            max-height: 250px;
            object-fit: cover;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            background-color: #fafafa;
        }

        .testimony-card h4 {
            font-size: 1.6rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 1rem;
        }

        .testimony-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .testimony-card small {
            display: block;
            color: #777;
            font-size: 0.85rem;
        }

        /* EMPTY STATE */
        .no-testimonies {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 1.25rem;
            color: #ffcc00;
            margin: 3rem 0;
        }
    </style>
}

<div class="page-content">

    <!-- HERO -->
    <div class="hero">
        <div class="hero-content">
            <h1>Testimonies</h1>
            <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">
                Share Your Testimony
            </a>
        </div>
    </div>

    <!-- SECTION TITLE -->
    <h2 class="section-title">Latest Stories from Our Community</h2>

    <!-- TESTIMONIES -->
    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">No testimonies found. Be the first to share yours!</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Testimony Image" />
                    }
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>

</div>
