@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../images/Testimonies.png') center center / cover no-repeat fixed;
            background-attachment: fixed;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            color: #fff;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            pointer-events: none;
            z-index: -1;
        }

        .page-content {
            padding-bottom: 5rem; /* Space before footer */
        }

        /* HERO SECTION */
        .hero {
            width: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('../images/Testimonies.jpg') center center / cover no-repeat;
            height: 420px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 3rem;
            text-align: center;
        }

        .hero-content {
            max-width: 800px;
            padding: 1rem;
            color: white;
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 0.8rem;
        }

        .hero-content p {
            font-size: 1.25rem;
            font-weight: 300;
            line-height: 1.8;
            color: #f1f1f1;
        }

        .hero-cta {
            display: inline-block;
            margin-top: 1.5rem;
            padding: 0.8rem 2rem;
            background: #ff9800;
            color: #fff;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.05rem;
            text-decoration: none;
            transition: background 0.3s ease;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

        .hero-cta:hover {
            background: #e88e00;
        }

        /* TESTIMONY GRID */
        .testimony-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2.5rem;
            padding: 2rem 5%;
        }

        /* CARD STYLING */
        .testimony-card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 2rem 1.5rem;
            color: #333;
            min-height: 400px;
        }

        .testimony-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 32px rgba(0, 0, 0, 0.15);
        }

        .testimony-card img {
            width: 100%;
            max-height: 250px;
            object-fit: contain;
            border-radius: 0.75rem;
            margin-bottom: 1.25rem;
            background-color: #f9f9f9;
        }

        .testimony-card h4 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.75rem;
        }

        .testimony-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 1rem;
            line-height: 1.6;
        }

        .testimony-card small {
            display: block;
            color: #777;
            font-size: 0.85rem;
            margin-top: auto;
        }

        /* EMPTY STATE */
        .no-testimonies {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 1.25rem;
            color: #f1f1f1;
            margin: 3rem 0;
        }
    </style>
}

<!-- PAGE WRAPPER -->
<div class="page-content">

    <!-- HERO -->
    <div class="hero">
        <div class="hero-content">
            <h1>Testimonies</h1>
            <p>
                Then Jesus said to them,<br />
                "So wherever you go in the world,<br />
                tell everyone the Good News."
            </p>
            <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">
                Share Your Testimony
            </a>
        </div>
    </div>

    <!-- TESTIMONIES -->
    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">No testimonies found. Be the first to share yours!</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Testimony Image" />
                    }
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>

</div>
