@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <style>
        /* RESET & BASE STYLES */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('../images/Background3.jpg') center center / cover fixed no-repeat;
            color: #333;
        }
        a { text-decoration: none; color: inherit; }

        /* PAGE TITLE */
        .page-title {
            text-align: center;
            font-size: 3rem;
            font-weight: 900;
            color: #ffffff;
            margin: 2rem 0 1rem;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.3);
        }

        /* HERO IMAGE */
        .hero-section {
            width: 90%;
            max-width: 900px;
            height: 300px;
            margin: 0 auto 3rem;
            overflow: hidden;
            border-radius: 1rem;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            transition: transform 0.3s ease;
        }
        .hero-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.5s ease;
        }
        .hero-section:hover img {
            transform: scale(1.05);
        }

        /* ABOUT SECTION */
        .about-section {
            padding: 2rem 1rem 4rem;
        }
        .container {
            max-width: 1200px;
            margin: auto;
        }

        /* GLASS CARD */
        .about-card {
            background: rgba(255, 255, 255, 0.12);
            border-radius: 2rem;
            padding: 3rem 2rem;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            box-shadow: 0 25px 60px rgba(0,0,0,0.3);
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            align-items: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .about-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 35px 80px rgba(0,0,0,0.4);
        }

        /* IMAGE GRID */
        .about-images {
            display: grid;
            gap: 1rem;
        }
        .about-images img {
            width: 100%;
            border-radius: 1rem;
            object-fit: cover;
            transition: transform 0.4s ease, box-shadow 0.3s ease;
        }
        .about-images img:first-child { height: 250px; }
        .about-images img:last-child { 
            width: 250px;  /* square width */
            height: 250px; /* square height */
        }
        .about-images img:hover {
            transform: scale(1.06);
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
        }

        /* CONTENT */
        .about-content h2 {
            font-size: 2.5rem;
            font-weight: 900;
            color: #fff;
            margin-bottom: 1.5rem;
            position: relative;
            text-shadow: 0 4px 12px rgba(0,0,0,0.4);
        }
        .about-content h2::after {
            content: "";
            width: 70px;
            height: 4px;
            background: linear-gradient(to right, #0072ff, #00c6ff);
            display: block;
            margin-top: 10px;
            border-radius: 2px;
        }
        .about-content p {
            font-size: 1.15rem;
            line-height: 1.8;
            color: #f1f1f1;
            margin-bottom: 1.2rem;
        }
        .about-content p.font-weight-bold {
            font-weight: 700;
            color: #fff;
            font-size: 1.2rem;
        }

        /* RESPONSIVE */
        @@media (max-width: 992px) {
            .about-card { grid-template-columns: 1fr; text-align: center; padding: 2rem; }
            .about-content { margin-top: 1rem; }
            .about-images img:last-child {
                width: 150px;
                height: 150px;
                margin: 0 auto;
            }
        }
        @@media (max-width: 768px) {
            .hero-section { height: 220px; }
            .about-images img:first-child { height: 180px; }
            .about-images img:last-child { width: 130px; height: 130px; margin: 0 auto; }
        }
    </style>
}

<!-- HTML -->
<h1 class="page-title">About Us</h1>

<div class="hero-section">
    <img src="~/images/team-member.jpg" alt="Our Team in Action">
</div>

<div class="about-section">
    <div class="container">
        <div class="about-card">
            <div class="about-images">
                <img src="~/images/team-member.jpg" alt="Team Praying Together">
                <img src="~/images/404.png" alt="Community Outreach">
            </div>
            <div class="about-content">
                <h2>Who We Are</h2>
                <p>Alabaster Box Anointing Ministries is a Christ-centered organization dedicated to spreading the love, hope, and healing power of Jesus Christ to communities near and far. Rooted in <strong>Mark 16:15</strong>, our mission is to go into all the world and share the Good News with everyone — through outreach, prayer, charity, and discipleship.</p>
                <p>Founded with a heart for service and a passion for transformation, we believe that every person matters and that through faith, lives can be restored and empowered. Whether we’re feeding the hungry, praying for the brokenhearted, or equipping others with the Word of God, our purpose remains the same: to serve with compassion and walk in the anointing of the Holy Spirit.</p>
                <p class="font-weight-bold">Join us as we continue to pour out love like the alabaster jar — selflessly and wholeheartedly — for the glory of God.</p>
            </div>
        </div>
    </div>
</div>
