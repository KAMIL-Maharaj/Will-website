@model Alabaster.Models.UpcomingEvent

<style>
    /* Full background with overlay */
    body {
        background: url('../images/Background5.jpg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        color: #fff;
    }

    body::before {
        content: "";
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.55); /* dark overlay for readability */
        backdrop-filter: blur(2px);
        z-index: -1;
    }

    .event-form-container {
        max-width: 650px;
        margin: 100px auto 50px;
        padding: 40px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.6);
        color: #fff;
    }

    h2 {
        text-align: center;
        font-weight: 900;
        margin-bottom: 30px;
        color: #ffffff;
        text-transform: uppercase;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
        letter-spacing: 1.5px;
    }

    label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #f5f5f5;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        font-size: 1rem;
        border-radius: 12px;
        border: none;
        margin-bottom: 20px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.25);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border: 2px solid #00c6ff;
        box-shadow: 0 0 10px rgba(0,198,255,0.7);
        outline: none;
    }

    .btn-primary {
        display: block;
        width: 100%;
        background: linear-gradient(135deg, #0072ff, #00c6ff);
        border: none;
        border-radius: 30px;
        padding: 14px;
        font-weight: 700;
        font-size: 1.2rem;
        color: #fff;
        text-transform: uppercase;
        box-shadow: 0 10px 25px rgba(0, 198, 255, 0.5);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 14px 40px rgba(0, 198, 255, 0.8);
    }

    /* Responsive */
    @@media (max-width: 640px) {
        .event-form-container {
            margin: 60px 15px;
            padding: 25px;
        }

        h2 {
            font-size: 1.6rem;
        }
    }
</style>

<div class="event-form-container">
    <h2>Add New Event</h2>

    <form asp-action="AddEvent" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Event Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Time</label>
            <input asp-for="Time" type="time" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Choose Image</label>
            <input type="file" id="imageFile" class="form-control" accept="image/*" />
            <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Save Event</button>
    </form>
</div>

<script>
    document.getElementById("imageFile").addEventListener("change", function (e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById("ImageUrl").value = reader.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
