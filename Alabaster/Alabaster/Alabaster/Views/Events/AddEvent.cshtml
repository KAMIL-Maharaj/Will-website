@model Alabaster.Models.UpcomingEvent

<h2>Add New Event</h2>

<form asp-action="AddEvent" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Event Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Time</label>
        <input asp-for="Time" type="time" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Choose Image</label>
        <input type="file" id="imageFile" class="form-control" accept="image/*" />
        <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />
    </div>

    <button type="submit" class="btn btn-primary">Save Event</button>
</form>

<script>
    document.getElementById("imageFile").addEventListener("change", function (e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById("ImageUrl").value = reader.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
