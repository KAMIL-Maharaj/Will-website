@model Alabaster.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer";
}

<style>
    /* Full background with dark overlay */
    body {
        background: url('../images/Background4.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        position: relative;
        color: #fff;
    }

    body::before {
        content: "";
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.55); /* overlay for readability */
        backdrop-filter: blur(2px);
        z-index: -1;
    }

    /* Volunteer form container (glassmorphism style) */
    .volunteer-container {
        max-width: 650px;
        margin: 100px auto 50px;
        padding: 40px 45px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(14px);
        border-radius: 20px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
        color: #fff;
        z-index: 1;
    }

    h2 {
        text-align: center;
        font-weight: 900;
        margin-bottom: 35px;
        color: #ffffff;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        font-size: 2rem;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.8);
    }

    label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #f5f5f5;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        font-size: 1rem;
        border-radius: 12px;
        border: none;
        outline: none;
        margin-bottom: 18px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

    .form-control:focus {
        border: 2px solid #00c6ff;
        box-shadow: 0 0 12px rgba(0, 198, 255, 0.7);
    }

    select.form-control {
        cursor: pointer;
    }

    textarea.form-control {
        resize: vertical;
    }

    .text-danger {
        color: #ff4d4d;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .alert-success {
        background-color: rgba(40, 167, 69, 0.2);
        border: 1px solid #28a745;
        color: #e9ffe9;
        font-weight: 700;
        padding: 14px 20px;
        border-radius: 12px;
        margin-bottom: 25px;
        text-align: center;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.4);
    }

    /* Submit button */
    .btn-success {
        display: block;
        width: 100%;
        background: linear-gradient(135deg, #28a745, #20c997);
        color: #fff;
        font-weight: 700;
        font-size: 1.2rem;
        padding: 14px 0;
        border-radius: 30px;
        border: none;
        cursor: pointer;
        box-shadow: 0 10px 28px rgba(32, 201, 151, 0.6);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        letter-spacing: 1px;
    }

    .btn-success:hover {
        transform: translateY(-3px);
        box-shadow: 0 14px 40px rgba(32, 201, 151, 0.8);
    }

    /* Responsive tweaks */
    @@media (max-width: 640px) {
        .volunteer-container {
            margin: 60px 15px 30px;
            padding: 25px 20px;
        }

        h2 {
            font-size: 1.5rem;
        }
    }
</style>
<div class="volunteer-container">
    <h2>Volunteer for an Event</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Volunteer" method="post" novalidate>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label>Select Event</label>
            <select asp-for="EventId" class="form-control" required>
                <option value="">-- Select Event --</option>
                @if (ViewBag.Events != null)
                {
                    foreach (var evt in ViewBag.Events)
                    {
                        if (Model.EventId == evt.Id)
                        {
                            <option value="@evt.Id" selected="selected">@evt.Name (@evt.Date)</option>
                        }
                        else
                        {
                            <option value="@evt.Id">@evt.Name (@evt.Date)</option>
                        }
                    }
                }
            </select>
            <span asp-validation-for="EventId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>ID Number</label>
            <input asp-for="IdNumber" class="form-control" />
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input asp-for="Phone" class="form-control" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Notes / Allergies</label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label>T-Shirt Size</label>
            <input asp-for="TShirtSize" class="form-control" />
        </div>

        <div class="form-group">
            <label>Number of Volunteers</label>
            <input asp-for="NumberOfVolunteers" type="number" class="form-control" min="1" value="1" />
            <span asp-validation-for="NumberOfVolunteers" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}