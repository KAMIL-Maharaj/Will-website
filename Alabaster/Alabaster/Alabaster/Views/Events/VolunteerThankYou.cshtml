@{
    ViewData["Title"] = "Thank You";
}

<style>
    body {
        background: linear-gradient(135deg, #f6d365, #fda085);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        color: #5a3e1b;
    }

    /* This wrapper centers the thank-you message without affecting navbar */
    .thank-you-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px;
        min-height: calc(100vh - 80px); /* leaves space for navbar height */
    }

    .thank-you-container {
        background: #fff7e6;
        padding: 40px 60px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(253, 160, 133, 0.4);
        max-width: 500px;
        text-align: center;
        animation: fadeInUp 1s ease forwards;
    }

    h2 {
        font-weight: 700;
        font-size: 2.8rem;
        margin-bottom: 20px;
        letter-spacing: 1.2px;
        color: #d35400;
        text-transform: uppercase;
        text-shadow: 1px 1px 4px rgba(211, 84, 0, 0.5);
    }

    p {
        font-size: 1.25rem;
        margin-bottom: 35px;
        color: #7f5700;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #d35400;
        border: none;
        padding: 15px 45px;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 50px;
        color: white;
        cursor: pointer;
        box-shadow: 0 6px 20px rgba(211, 84, 0, 0.5);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary:hover {
        background-color: #a03e00;
        box-shadow: 0 8px 30px rgba(160, 62, 0, 0.7);
        text-decoration: none;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="thank-you-wrapper">
    <div class="thank-you-container">
        <h2>Thank You for Volunteering!</h2>
        <p>Your volunteer information has been successfully submitted.</p>
        <a href="/Events" class="btn btn-primary">Back to Events</a>
    </div>
</div>
