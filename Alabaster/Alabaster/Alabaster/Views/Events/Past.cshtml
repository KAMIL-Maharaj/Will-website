@model List<Alabaster.Models.UpcomingEvent>

@{
    ViewData["Title"] = "Past Events";
}

<style>
    /* Background image same as upcoming but with darker overlay */
    body {
        background: url('../images/Background3.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Darker overlay for past events */
    .page-overlay {
        background: rgba(10, 25, 50, 0.75);
        min-height: 100vh;
        padding: 30px;
        color: #e0e6f1;
    }

    /* Card styling */
    .event-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background: rgba(25, 40, 70, 0.9);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: #d1d9ff;
    }

    /* Hover effect with subtle lift and glow */
    .event-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 0 15px 3px rgba(100, 150, 255, 0.7);
    }

    /* Event images */
    .event-card img {
        height: 200px;
        object-fit: cover;
        filter: brightness(0.85);
    }

    /* Card titles */
    .event-card .card-title {
        font-weight: 700;
        color: #a8b8ff;
    }

    /* Back button styling */
    .btn-back {
        background-color: #6078ff;
        color: white;
        border-radius: 30px;
        padding: 8px 22px;
        font-weight: 600;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 12px rgba(96, 120, 255, 0.5);
        display: inline-block;
        margin-bottom: 20px;
    }

    .btn-back:hover {
        background-color: #3f51b5;
        color: white;
        text-decoration: none;
        box-shadow: 0 6px 18px rgba(63, 81, 181, 0.7);
    }
</style>

<div class="page-overlay">
    <div class="container">
        <h2 class="mb-4 text-center">ðŸ“œ Past Events</h2>

        <a href="@Url.Action("Index", "Events")" class="btn btn-back">â¬… Back to Upcoming Events</a>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var evt in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card event-card shadow-lg">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <img src="@evt.ImageUrl" class="card-img-top" alt="@evt.Name" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@evt.Name</h5>
                                <p class="card-text">@evt.Description</p>
                                <p><strong>Date:</strong> @evt.Date</p>
                                <p><strong>Time:</strong> @evt.Time</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center text-white-50">
                No past events found.
            </div>
        }
    </div>
</div>
