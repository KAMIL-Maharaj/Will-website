@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            font-size: 11px; /* scaled down from ~16px */
        }

        .hero {
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            position: relative;
            background: url('/images/Home.jpg') center center / cover no-repeat;
            height: 280px; /* 400px -> scaled */
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            margin-bottom: 2.1rem; /* 3rem -> scaled */
        }

        .hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: rgba(0, 0, 0, 0.55);
            backdrop-filter: blur(3px);
            z-index: 0;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            padding: 0.7rem 1.4rem; /* 1rem/2rem -> scaled */
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 11px; /* 16px -> scaled */
            box-shadow: 0 5.6px 22.4px rgba(0, 0, 0, 0.3); /* scaled */
        }

        .hero-content h1 {
            font-size: 2.1rem; /* 3rem -> scaled */
            font-weight: bold;
            margin-bottom: 0.35rem; /* 0.5rem -> scaled */
            color: #fff;
        }

        .hero-content p {
            font-size: 0.84rem; /* 1.2rem -> scaled */
            line-height: 1.12; /* 1.6 -> scaled */
            color: #f0f0f0;
        }

        .hero-cta {
            display: inline-block;
            margin-top: 1.05rem; /* 1.5rem -> scaled */
            padding: 0.56rem 1.26rem; /* 0.8rem/1.8rem -> scaled */
            background-color: #00BFFF;
            color: white;
            text-decoration: none;
            border-radius: 0.35rem; /* 0.5rem -> scaled */
            font-size: 0.77rem; /* 1.1rem -> scaled */
            font-weight: 600;
            box-shadow: 0 2.8px 9.8px rgba(0, 191, 255, 0.4); /* scaled */
            transition: all 0.3s ease;
        }

        .hero-cta:hover {
            background-color: #007ACC;
            transform: scale(1.05);
            box-shadow: 0 4.2px 12.6px rgba(0, 122, 204, 0.5); /* scaled */
        }

        .youtube-player {
            max-width: 840px; /* 1200px -> scaled */
            width: 100%;
            margin: 0 auto 2.1rem auto; /* 3rem -> scaled */
            position: relative;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            height: 0;
            border-radius: 14px; /* 20px -> scaled */
            overflow: hidden;
            box-shadow: 0 7px 21px rgba(0, 0, 0, 0.25); /* scaled */
            border: 2.8px solid #00BFFF; /* 4px -> scaled */
            background-color: #000;
        }

        .youtube-player iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

        .text-muted {
            text-align: center;
            font-size: 0.77rem; /* 1.1rem -> scaled */
            margin-top: 1.4rem; /* 2rem -> scaled */
            color: #888;
        }

        @@media (max-width: 768px) {
            .youtube-player {
                padding-bottom: 56.25%;
                max-width: 100%;
                border-radius: 8px; /* 12px -> scaled */
                border: 2.1px solid #00BFFF; /* 3px -> scaled */
            }
        }
    </style>
}

<div class="hero">
    <div class="hero-content">
        <h1>Alabaster Box</h1>
        <p>
            Then Jesus said to them,<br />
            <em>"So wherever you go in the world,<br />
            tell everyone the Good News."</em>
        </p>
        <a href="https://www.youtube.com/%40Naartjie00" target="_blank" class="hero-cta">
            Visit Our YouTube Channel
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty((string?)ViewBag.YouTubeVideoId))
{
    <div class="youtube-player">
        <iframe src="https://www.youtube.com/embed/@(ViewBag.YouTubeVideoId)?rel=0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>
}
else
{
    <p class="text-muted">We couldn’t find any videos to display right now.</p>
}
