@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
<style>
body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background: url('../images/jesus10.png') center center / cover no-repeat fixed;
    background-color: #000;
    color: #fff;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

/* ===== OVERLAY ===== */
body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    z-index: -1;
}

/* ===== PARTICLES ===== */
#particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
    z-index: -1;
}

.particle {
    position: absolute;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    filter: blur(2px);
    animation: float 10s linear infinite;
}

@@keyframes float {
    0% { transform: translateY(100vh) translateX(0) rotate(0deg); opacity: 0; }
    10% { opacity: 1; }
    100% { transform: translateY(-10vh) translateX(50vw) rotate(360deg); opacity: 0; }
}

/* ===== HERO SECTION ===== */
.hero {
    padding: 120px 20px 60px 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero h1 {
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(90deg, #FFD700, #ffcc33, #ffffff);
    -webkit-background-clip: text;
    color: transparent;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1rem;
    animation: shimmer 5s linear infinite;
}

.hero p {
    font-size: 1.4rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* ===== YOUTUBE PLAYER ===== */
.youtube-player {
    max-width: 1000px;
    width: 90%;
    margin: 0 auto 3rem auto;
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.6);
    border: 4px solid rgba(0,191,255,0.7);
    background-color: #000;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.youtube-player:hover {
    transform: scale(1.02);
    box-shadow: 0 20px 60px rgba(0,191,255,0.8);
}

.youtube-player iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}

/* ===== BUTTON ===== */
.hero-cta {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.8rem 2rem;
    background: linear-gradient(135deg, #00c6ff, #0072ff);
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-size: 1.2rem;
    font-weight: 700;
    box-shadow: 0 6px 18px rgba(0,198,255,0.5);
    transition: all 0.3s ease;
}

.hero-cta:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 35px rgba(0,198,255,0.7);
}

/* ===== SECTIONS ===== */
.section {
    padding: 80px 20px;
    text-align: center;
}

.section h2 {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 40px;
    color: #FFD700;
    text-shadow: 0 0 10px rgba(255,215,0,0.6);
}

.section p {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
    color: #eee;
}

/* ===== BUTTONS IN SECTIONS ===== */
.section a.btn {
    display: inline-block;
    margin-top: 2rem;
    padding: 12px 28px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    background: linear-gradient(135deg, #FFD700, #FFAA00);
    color: #000;
    box-shadow: 0 6px 18px rgba(255, 170, 0, 0.5);
    transition: all 0.3s ease;
}

.section a.btn:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 35px rgba(255, 170, 0, 0.7);
}

/* ===== RESPONSIVE ===== */
@@media (max-width: 768px) {
    .hero h1 {
        font-size: 2.2rem;
    }
    .hero p, .section p {
        font-size: 1rem;
    }
    .section h2 {
        font-size: 2rem;
    }
    .hero-cta, .section a.btn {
        font-size: 1rem;
        padding: 10px 20px;
    }
}
</style>
}

<!-- ===== PARTICLES ===== -->
<div id="particles"></div>

<!-- ===== HERO ===== -->
<div class="hero">
    <h1>Welcome to Alabaster Box</h1>
    <p>“Then Jesus said to them, ‘So wherever you go in the world, tell everyone the Good News.’”</p>
    <a href="https://www.youtube.com/%40Naartjie00" target="_blank" class="hero-cta">Visit Our YouTube Channel</a>
</div>

<!-- ===== YOUTUBE PLAYER ===== -->
@if (!string.IsNullOrEmpty((string?)ViewBag.YouTubeVideoId))
{
    <div class="youtube-player">
        <iframe src="https://www.youtube.com/embed/@(ViewBag.YouTubeVideoId)?rel=0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>
}
else
{
    <p class="text-muted">We couldn’t find any videos to display right now.</p>
}

<!-- ===== ABOUT SECTION ===== -->
<div class="section" id="about">
    <h2>About Alabaster Box</h2>
    <p>
        Alabaster Box is a place for inspiration, worship, and spreading the Good News. 
        Join our community, watch our teachings, and volunteer to make a difference.
    </p>
    <a href="/About" class="btn">Learn More</a>
</div>

<!-- ===== JOIN US SECTION ===== -->
<div class="section" id="join">
    <h2>Join Our Community</h2>
    <p>
        Be part of something bigger. Stay updated on events, volunteer opportunities, and uplifting messages.
    </p>
    <a href="/Volunteer" class="btn">Volunteer Now</a>
</div>

<!-- ===== CONTACT / SOCIAL SECTION ===== -->
<div class="section" id="contact">
    <h2>Connect With Us</h2>
    <p>
        Follow us on social media, reach out, and become part of our family. 
        Together we can share hope and positivity.
    </p>
    <a href="https://www.facebook.com/" target="_blank" class="btn">Facebook</a>
    <a href="https://www.instagram.com/" target="_blank" class="btn">Instagram</a>
</div>

@section Scripts {
<script>
/* ===== PARTICLE EFFECT ===== */
const particleContainer = document.getElementById('particles');

function createParticle() {
    const particle = document.createElement('div');
    particle.classList.add('particle');
    const size = Math.random() * 6 + 2; // 2px to 8px
    particle.style.width = size + 'px';
    particle.style.height = size + 'px';
    particle.style.left = Math.random() * window.innerWidth + 'px';
    particle.style.animationDuration = (5 + Math.random() * 10) + 's';
    particle.style.background = `rgba(255,255,255,${Math.random() * 0.8 + 0.2})`;
    particleContainer.appendChild(particle);

    setTimeout(() => {
        particle.remove();
    }, 15000); // remove after animation
}

// Create multiple particles at intervals
setInterval(createParticle, 150);
</script>
}
