@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: contain; /* ensures the whole image is visible */
    background-color: #000; /* fallback for empty spaces */
    color: #fff;
    min-height: 100vh;
    overflow-y: auto;
}

    .hero {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        position: relative;
        background: url('/images/Home.jpg') center center / cover no-repeat;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-bottom: 3rem;
    }

    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: rgba(0, 0, 0, 0.55);
        backdrop-filter: blur(3px);
        z-index: 0;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 1rem 2rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #fff;
    }

    .hero-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        color: #f0f0f0;
    }

    .hero-cta {
        display: inline-block;
        margin-top: 1.5rem;
        padding: 0.8rem 1.8rem;
        background-color: #00BFFF;
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        box-shadow: 0 4px 14px rgba(0, 191, 255, 0.4);
        transition: all 0.3s ease;
    }

    .hero-cta:hover {
        background-color: #007ACC;
        transform: scale(1.05);
        box-shadow: 0 6px 18px rgba(0, 122, 204, 0.5);
    }

    .youtube-player {
        max-width: 1200px;
        width: 100%;
        margin: 0 auto 3rem auto;
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        border: 4px solid #00BFFF;
        background-color: #000;
    }

    .youtube-player iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }

    .text-muted {
        text-align: center;
        font-size: 1.1rem;
        margin-top: 2rem;
        color: #888;
    }

    @@media (max-width: 768px) {
        .youtube-player {
            padding-bottom: 56.25%;
            max-width: 100%;
            border-radius: 12px;
            border: 3px solid #00BFFF;
        }

        .hero {
            height: 300px;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }
    }
</style>
}

<div class="hero">
    <div class="hero-content">
        <h1>Alabaster Box</h1>
        <p>
            Then Jesus said to them,<br />
            <em>"So wherever you go in the world,<br />
            tell everyone the Good News."</em>
        </p>
        <a href="https://www.youtube.com/%40Naartjie00" target="_blank" class="hero-cta">
            Visit Our YouTube Channel
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty((string?)ViewBag.YouTubeVideoId))
{
    <div class="youtube-player">
        <iframe src="https://www.youtube.com/embed/@(ViewBag.YouTubeVideoId)?rel=0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>
}
else
{
    <p class="text-muted">We couldn’t find any videos to display right now.</p>
}
