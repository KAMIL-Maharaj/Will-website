@model IEnumerable<Alabaster.Models.PrayerRequest>
@{
    ViewData["Title"] = "All Prayer Requests";
}

@section Styles {
<style>
/* ===== BASE STYLING ===== */
html, body {
    height: 100%;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
    background: url('../images/jesus10.png') center center / cover no-repeat fixed;
    position: relative;
    overflow-x: hidden;
}

/* CINEMATIC DARK OVERLAY */
body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.85), rgba(0,0,0,0.95)),
                radial-gradient(circle at bottom, rgba(255,215,0,0.15), rgba(0,0,0,0.9));
    z-index: 0;
}

/* ===== PAGE CONTAINER ===== */
.page-container {
    max-width: 1000px;
    margin: 4rem auto;
    background: rgba(15,15,15,0.75);
    border-radius: 1.5rem;
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255,215,0,0.2);
    box-shadow: 0 20px 40px rgba(255,215,0,0.2);
    padding: 2rem;
    position: relative;
    z-index: 2;

    /* Scale everything inside by 10% */
    transform: scale(1.1);
    transform-origin: top center;
}


/* ===== PAGE HEADER ===== */
.page-container h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
    font-weight: 900;
    text-transform: uppercase;
    background: linear-gradient(90deg, #FFD700, #fff, #FFD700);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 4s linear infinite;
    text-shadow: 0 0 25px rgba(255,255,255,0.4);
}

/* ===== TABLE STYLING ===== */
.table-responsive {
    overflow-x: auto;
}

table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 0.95rem;
}

table thead th {
    background: linear-gradient(90deg, #FFD700, #FFB700, #FFD700);
    color: #111;
    font-weight: 700;
    padding: 0.8rem;
    text-align: left;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

table tbody tr {
    background: rgba(255,255,255,0.05);
    transition: transform 0.2s ease, background 0.2s ease, box-shadow 0.2s ease;
    cursor: default;
}

table tbody tr:hover {
    background: rgba(255,215,0,0.15);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(255,215,0,0.3);
}

table td, table th {
    padding: 0.75rem 1rem;
}

/* ===== EMPTY STATE ===== */
.text-center {
    text-align: center;
    font-size: 1rem;
    font-weight: 500;
    color: #FFD700;
}

/* ===== ANIMATIONS ===== */
@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* ===== FLOATING PARTICLES ===== */
.sparkle {
    position: fixed;
    width: 3px;
    height: 3px;
    background: rgba(255,215,0,0.9);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(255,215,0,0.8);
    pointer-events: none;
    animation: sparkleAnim linear infinite;
    z-index: 1;
}

@@keyframes sparkleAnim {
    0% { transform: translateY(0) scale(0.5); opacity: 0; }
    50% { transform: translateY(-25px) scale(1); opacity: 1; }
    100% { transform: translateY(-50px) scale(0.5); opacity: 0; }
}

@@media (max-width: 768px) {
    .page-container { margin: 2rem 1rem; padding: 1.5rem; }
    table thead th, table td { font-size: 0.85rem; padding: 0.5rem; }
    .page-container h2 { font-size: 1.5rem; }
}
</style>
}

<div class="page-container">
    <h2>üôè Prayer Requests (Admin Only)</h2>

    @if (!Model.Any())
    {
        <p class="text-center">No prayer requests yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Request</th>
                        <th>Submitted At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prayer in Model)
                    {
                        <tr>
                            <td>@prayer.Name</td>
                            <td>@prayer.UserEmail</td>
                            <td>@prayer.Request</td>
                            <td>@prayer.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
<script>
    // Floating sparkles
    function createSparkle() {
        const sparkle = document.createElement('div');
        sparkle.classList.add('sparkle');
        sparkle.style.left = Math.random() * window.innerWidth + 'px';
        sparkle.style.top = Math.random() * window.innerHeight + 'px';
        sparkle.style.animationDuration = (2 + Math.random() * 3) + 's';
        document.body.appendChild(sparkle);
        setTimeout(() => sparkle.remove(), 4000);
    }
    setInterval(createSparkle, 150);
</script>
}
