@{
    ViewData["Title"] = "Prayer Request";
}

<style>
/* üåå Global Background */
body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: cover;
    background-color: #000;
    color: #fff;
    margin: 0;
    padding: 0;
}

/* ‚ú® Overlay to darken bright areas */
.page-overlay {
    position: relative;
    padding: 100px 20px;
    z-index: 1;
}

.page-overlay::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: -1;
}

/* üïä Heading with gold shimmer */
h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 3rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 2px;
    background: linear-gradient(90deg, #ffb347, #ffcc33, #fff2a8);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    text-shadow: 0 0 20px rgba(255, 204, 0, 0.3);
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* üåü Prayer Card */
.page-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 40px 35px;
    border-radius: 20px;
    background: rgba(15, 15, 15, 0.75);
    backdrop-filter: blur(18px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.75);
    animation: fadeUp 0.8s ease;
    transform: translateY(0);
}

@@keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}

/* üí¨ Labels & Inputs */
.form-label {
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.5rem;
    font-size: 1rem;
    letter-spacing: 0.5px;
}

.form-control {
    font-size: 1rem;
    padding: 0.9rem 1rem;
    border-radius: 10px;
    border: none;
    background: rgba(255, 255, 255, 0.95);
    color: #222;
    box-shadow: inset 0 2px 6px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
}

.form-control:focus {
    border: 2px solid #FFD700;
    box-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
}

/* ‚ú® Success Alert */
.alert-success {
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid #28a745;
    color: #c9ffc9;
    font-weight: 600;
    padding: 12px;
    border-radius: 10px;
    margin-bottom: 1rem;
    text-align: center;
}

/* üôè Button */
.btn-primary {
    background: linear-gradient(135deg, #FFD700, #FFA500, #FFB347);
    border: none;
    font-weight: 800;
    font-size: 1.1rem;
    text-transform: uppercase;
    color: #000;
    letter-spacing: 1px;
    padding: 0.9rem;
    border-radius: 35px;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(255, 200, 0, 0.4);
    transition: all 0.3s ease;
    width: 100%;
}

.btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 30px rgba(255, 220, 50, 0.6);
}

/* üí´ Glow around the form */
.page-container::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 20px;
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.15), rgba(255, 140, 0, 0.1));
    z-index: -1;
    filter: blur(25px);
}

/* üì± Responsive */
@@media (max-width: 768px) {
    .page-container {
        padding: 25px 20px;
        margin: 0 10px;
    }

    h2 {
        font-size: 2.3rem;
    }
}
</style>

<div class="page-overlay">
    <div class="page-container">
        <h2>üôè Submit a Prayer Request üôè</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Submit" method="post" class="mt-3">
            <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="mb-3">
                <label for="request" class="form-label">Your Prayer Request</label>
                <textarea name="request" class="form-control" rows="4" placeholder="Write your prayer here..." required></textarea>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-primary">Send Request</button>
            </div>
        </form>
    </div>
</div>
