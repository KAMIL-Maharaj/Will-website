@{
    ViewData["Title"] = "Prayer Request";
}

<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: contain; /* ensures the whole image is visible */
    background-color: #000; /* fallback for empty spaces */
    color: #fff;
    min-height: 100vh;
    overflow-y: auto;
}

    .page-container {
        margin: 3rem auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 6px 16px rgba(0,0,0,0.25);
        width: 90%; /* responsive full width */
        max-width: none; /* remove max-width */
    }

    h2 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #2c3e50;
        font-size: 1.8rem; /* normal heading size */
        font-weight: 700;
    }

    .form-label {
        font-weight: 600;
        font-size: 1rem; /* normal */
        margin-bottom: 0.5rem;
    }

    .form-control {
        font-size: 1rem; /* normal */
        padding: 0.75rem;
        border-radius: 0.4rem;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ffb400, #ff9900);
        border: none;
        font-weight: 600;
        font-size: 1rem; /* normal */
        padding: 0.75rem;
        border-radius: 0.4rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(90deg, #e09c00, #cc8400);
        transform: translateY(-2px);
    }

    .alert-success {
        font-size: 1rem; /* normal */
        padding: 0.75rem;
        border-radius: 0.4rem;
    }
</style>

<div class="page-container">
    <h2>üôè Submit a Prayer Request</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <form asp-action="Submit" method="post" class="mt-2">
        <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" name="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="request" class="form-label">Prayer Request</label>
            <textarea name="request" class="form-control" rows="4" required></textarea>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Send Request</button>
        </div>
    </form>
</div>
