@{
    ViewData["Title"] = "Prayer Request";
}

<style>
/* üåå Global Background */
body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: cover;
    background-color: #000;
    color: #fff;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

/* ‚ú® Overlay to darken bright areas */
.page-overlay {
    position: relative;
    padding: 100px 20px;
    z-index: 1;
}

.page-overlay::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: -1;
}

/* üåü Prayer Card */
.page-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 40px 35px;
    border-radius: 20px;
    background: rgba(15, 15, 15, 0.75);
    backdrop-filter: blur(18px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.75);
    position: relative;
    opacity: 0;
    transform: translateY(50px) scale(0.98);
    animation: fadeUpCard 0.8s forwards;
}

/* Floating glow behind card */
.page-container::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 20px;
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.15), rgba(255, 140, 0, 0.1));
    z-index: -1;
    filter: blur(25px);
    animation: glowPulse 3s ease-in-out infinite alternate;
}

/* üí´ Heading shimmer */
h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 3rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 2px;
    background: linear-gradient(90deg, #ffb347, #ffcc33, #fff2a8);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 5s linear infinite, fadeUp 1.2s ease forwards;
    text-shadow: 0 0 20px rgba(255, 204, 0, 0.5);
}

/* üí¨ Labels & Inputs */
.form-label {
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.5rem;
    font-size: 1rem;
    letter-spacing: 0.5px;
}

.form-control {
    font-size: 1rem;
    padding: 0.9rem 1rem;
    border-radius: 10px;
    border: none;
    background: rgba(255, 255, 255, 0.95);
    color: #222;
    box-shadow: inset 0 2px 6px rgba(0,0,0,0.2);
    transition: all 0.3s ease, transform 0.3s ease;
}

.form-control:focus {
    border: 2px solid #FFD700;
    box-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
    transform: scale(1.02);
}

/* ‚ú® Success Alert */
.alert-success {
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid #28a745;
    color: #c9ffc9;
    font-weight: 600;
    padding: 12px;
    border-radius: 10px;
    margin-bottom: 1rem;
    text-align: center;
    animation: fadeUp 1s ease forwards;
}

/* üôè Button */
.btn-primary {
    background: linear-gradient(135deg, #FFD700, #FFA500, #FFB347);
    border: none;
    font-weight: 800;
    font-size: 1.1rem;
    text-transform: uppercase;
    color: #000;
    letter-spacing: 1px;
    padding: 0.9rem;
    border-radius: 35px;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(255, 200, 0, 0.4);
    transition: all 0.3s ease;
    width: 100%;
}

.btn-primary:hover {
    transform: translateY(-3px) scale(1.05) rotate(-1deg);
    box-shadow: 0 12px 30px rgba(255, 220, 50, 0.7);
}

/* Animations */
@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

@@keyframes fadeUp {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
}

@@keyframes fadeUpCard {
    0% { opacity: 0; transform: translateY(50px) scale(0.98); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
}

@@keyframes glowPulse {
    0% { filter: blur(20px) opacity(0.7); }
    50% { filter: blur(30px) opacity(1); }
    100% { filter: blur(20px) opacity(0.7); }
}

/* üåå Floating particles */
.particle {
    position: absolute;
    background: rgba(255, 215, 0, 0.3);
    border-radius: 50%;
    width: 6px;
    height: 6px;
    pointer-events: none;
    animation: floatParticle linear infinite;
}

@@keyframes floatParticle {
    0% { transform: translateY(0) translateX(0) scale(1); opacity: 1; }
    50% { transform: translateY(-80px) translateX(15px) scale(0.8); opacity: 0.6; }
    100% { transform: translateY(0) translateX(0) scale(1); opacity: 1; }
}

/* üì± Responsive */
@@media (max-width: 768px) {
    .page-container { padding: 25px 20px; margin: 0 10px; }
    h2 { font-size: 2.3rem; }
}
</style>

<div class="page-overlay">
    <div class="page-container">
        <h2>üôè Submit a Prayer Request üôè</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Submit" method="post" class="mt-3">
            <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="mb-3">
                <label for="request" class="form-label">Your Prayer Request</label>
                <textarea name="request" class="form-control" rows="4" placeholder="Write your prayer here..." required></textarea>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-primary">Send Request</button>
            </div>
        </form>
    </div>

    <!-- Floating Particles -->
    <script>
        const particleCount = 30;
        for(let i=0; i<particleCount; i++){
            const p = document.createElement('div');
            p.classList.add('particle');
            p.style.left = Math.random() * 100 + '%';
            p.style.top = Math.random() * 100 + '%';
            p.style.width = (Math.random()*4+3) + 'px';
            p.style.height = p.style.width;
            p.style.animationDuration = (Math.random()*4+4) + 's';
            document.querySelector('.page-overlay').appendChild(p);
        }
    </script>
</div>
