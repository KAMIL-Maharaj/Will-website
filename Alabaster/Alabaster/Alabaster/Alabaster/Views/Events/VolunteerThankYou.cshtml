@{
    ViewData["Title"] = "Thank You";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
/* Full background with overlay (same as volunteer page) */
body {
    background: url('../images/Background4.jpg') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    margin: 0;
    padding: 0;
    color: #fff;
    position: relative;
}
body::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(2px);
    z-index: -1;
}

/* Wrapper centers the thank-you message */
.thank-you-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 28px;
    min-height: calc(100vh - 56px);
}

/* Card container */
.thank-you-container {
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(14px);
    padding: 28px 42px;
    border-radius: 16px;
    box-shadow: 0 12px 28px rgba(0,0,0,0.6);
    max-width: 380px;
    text-align: center;
    color: #fff;
    animation: fadeIn 0.6s ease forwards;
}

/* Heading */
h2 {
    font-weight: 900;
    font-size: 1.5rem;
    margin-bottom: 14px;
    letter-spacing: 0.5px;
    text-shadow: 1.5px 1.5px 6px rgba(0,0,0,0.8);
}

/* Paragraph */
p {
    font-size: 0.95rem;
    margin-bottom: 24px;
    color: #f0f0f0;
}

/* Button */
.btn-primary {
    background: linear-gradient(135deg, #28a745, #20c997, #00c6ff);
    border: none;
    padding: 10px 28px;
    font-size: 0.95rem;
    font-weight: 700;
    border-radius: 25px;
    color: #fff;
    cursor: pointer;
    box-shadow: 0 6px 18px rgba(0,198,255,0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 28px rgba(0,198,255,0.7);
    text-decoration: none;
}

/* Animation */
@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Responsive tweaks */
@@media (max-width: 600px) {
    .thank-you-container {
        margin: 35px 15px;
        padding: 20px 15px;
    }
    h2 { font-size: 1.25rem; }
    p { font-size: 0.85rem; }
}
</style>
}

<div class="thank-you-wrapper">
    <div class="thank-you-container">
        <h2>Thank You for Volunteering!</h2>
        <p>Your volunteer information has been successfully submitted.</p>
        <a href="/Events" class="btn btn-primary">Back to Events</a>
    </div>
</div>
