@{
    ViewData["Title"] = "Thank You";
}

<style>
body {
    background: linear-gradient(135deg, #f6d365, #fda085);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    color: #5a3e1b;
    font-size: 11px;
}

/* Wrapper centers the thank-you message */
.thank-you-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 28px;
    min-height: calc(100vh - 56px);
}

.thank-you-container {
    background: #fff7e6;
    padding: 28px 42px;
    border-radius: 14px;
    box-shadow: 0 7px 21px rgba(253, 160, 133, 0.4);
    max-width: 350px;
    text-align: center;
    animation: fadeInUp 1s ease forwards;
}

h2 {
    font-weight: 700;
    font-size: 1.96rem;
    margin-bottom: 14px;
    letter-spacing: 0.84px;
    color: #d35400;
    text-transform: uppercase;
    text-shadow: 0.7px 0.7px 2.8px rgba(211, 84, 0, 0.5);
}

p {
    font-size: 0.875rem;
    margin-bottom: 24.5px;
    color: #7f5700;
    font-weight: 500;
}

.btn-primary {
    background-color: #d35400;
    border: none;
    padding: 10.5px 31.5px;
    font-size: 0.77rem;
    font-weight: 700;
    border-radius: 35px;
    color: white;
    cursor: pointer;
    box-shadow: 0 4.2px 14px rgba(211, 84, 0, 0.5);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.btn-primary:hover {
    background-color: #a03e00;
    box-shadow: 0 5.6px 21px rgba(160, 62, 0, 0.7);
    text-decoration: none;
}

@@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(21px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<div class="thank-you-wrapper">
    <div class="thank-you-container">
        <h2>Thank You for Volunteering!</h2>
        <p>Your volunteer information has been successfully submitted.</p>
        <a href="/Events" class="btn btn-primary">Back to Events</a>
    </div>
</div>
