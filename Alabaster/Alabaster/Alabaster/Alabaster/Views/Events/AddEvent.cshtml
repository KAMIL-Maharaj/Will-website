@model Alabaster.Models.UpcomingEvent

<style>
/* Full background with overlay */
body {
    background: url('../images/Background5.jpg') no-repeat center center fixed;
    background-size: cover;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
    font-size: 11px; /* scaled down from ~16px */
}

body::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(2px);
    z-index: -1;
}

.event-form-container {
    max-width: 455px; /* 650px -> scaled down 30% */
    margin: 70px auto 35px; /* 100px/50px -> scaled */
    padding: 28px; /* 40px -> scaled */
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(15px);
    border-radius: 14px; /* 20px -> scaled */
    box-shadow: 0 8.4px 24.5px rgba(0,0,0,0.6); /* 12px/35px -> scaled */
    color: #fff;
}

h2 {
    text-align: center;
    font-weight: 900;
    margin-bottom: 21px; /* 30px -> scaled */
    color: #ffffff;
    text-transform: uppercase;
    text-shadow: 1.4px 1.4px 5.6px rgba(0,0,0,0.7); /* scaled */
    letter-spacing: 1px; /* 1.5px -> scaled */
}

label {
    font-weight: 600;
    margin-bottom: 5px; /* 8px -> scaled */
    display: block;
    color: #f5f5f5;
}

.form-control {
    width: 100%;
    padding: 8px 10px; /* 12px/15px -> scaled */
    font-size: 0.7rem; /* 1rem -> scaled */
    border-radius: 8px; /* 12px -> scaled */
    border: none;
    margin-bottom: 14px; /* 20px -> scaled */
    box-shadow: 0 2.1px 5.6px rgba(0,0,0,0.25); /* 3px/8px -> scaled */
    transition: all 0.3s ease;
}

.form-control:focus {
    border: 1.4px solid #00c6ff; /* 2px -> scaled */
    box-shadow: 0 0 7px rgba(0,198,255,0.7); /* scaled */
    outline: none;
}

.btn-primary {
    display: block;
    width: 100%;
    background: linear-gradient(135deg, #0072ff, #00c6ff);
    border: none;
    border-radius: 21px; /* 30px -> scaled */
    padding: 10px; /* 14px -> scaled */
    font-weight: 700;
    font-size: 0.84rem; /* 1.2rem -> scaled */
    color: #fff;
    text-transform: uppercase;
    box-shadow: 0 7px 17.5px rgba(0, 198, 255, 0.5); /* 10px/25px -> scaled */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px); /* 3px -> scaled */
    box-shadow: 0 9.8px 28px rgba(0, 198, 255, 0.8); /* scaled */
}

/* Responsive */
@@media (max-width: 640px) {
    .event-form-container {
        margin: 42px 10px; /* 60px/15px -> scaled */
        padding: 17px; /* 25px -> scaled */
    }

    h2 {
        font-size: 1.12rem; /* 1.6rem -> scaled */
    }
}
</style>

<div class="event-form-container">
    <h2>Add New Event</h2>

    <form asp-action="AddEvent" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Event Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Time</label>
            <input asp-for="Time" type="time" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Choose Image</label>
            <input type="file" id="imageFile" class="form-control" accept="image/*" />
            <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Save Event</button>
    </form>
</div>

<script>
document.getElementById("imageFile").addEventListener("change", function (e) {
    const file = e.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onloadend = function () {
            document.getElementById("ImageUrl").value = reader.result;
        };
        reader.readAsDataURL(file);
    }
});
</script>
