@model Alabaster.Models.UpcomingEvent

<style>
/* Background with overlay */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: contain; /* ensures the whole image is visible */
    background-color: #000; /* fallback for empty spaces */
    color: #fff;
    min-height: 100vh;
    overflow-y: auto;
}

/* Overlay effect */
body::before {
    content: "";
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(3px);
    z-index: -1;
}

/* Form container */
.event-form-container {
    width: 100%;
    max-width: 600px; /* allow it to grow naturally */
    margin: 80px auto;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(15px);
    border-radius: 14px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
    color: #fff;
}

/* Headings */
h2 {
    text-align: center;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: #fff;
    text-transform: uppercase;
    text-shadow: 1.5px 1.5px 6px rgba(0, 0, 0, 0.7);
    letter-spacing: 1px;
}

/* Labels */
label {
    font-weight: 600;
    margin-bottom: 5px;
    display: block;
    color: #f5f5f5;
}

/* Inputs */
.form-control {
    width: 100%;
    padding: 10px 12px;
    font-size: 0.9rem;
    border-radius: 8px;
    border: none;
    margin-bottom: 14px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease;
}

.form-control:focus {
    border: 1.5px solid #00c6ff;
    box-shadow: 0 0 8px rgba(0, 198, 255, 0.7);
    outline: none;
}

/* Button */
.btn-primary {
    display: block;
    width: 100%;
    background: linear-gradient(135deg, #0072ff, #00c6ff);
    border: none;
    border-radius: 24px;
    padding: 10px;
    font-weight: 700;
    font-size: 0.9rem;
    color: #fff;
    text-transform: uppercase;
    box-shadow: 0 6px 18px rgba(0, 198, 255, 0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 28px rgba(0, 198, 255, 0.8);
}

/* Responsive behavior */
@@media (max-width: 768px) {
    .event-form-container {
        margin: 40px 16px;
        padding: 1.5rem;
    }
    h2 {
        font-size: 1.2rem;
    }
}
</style>

<div class="event-form-container">
    <h2>Add New Event</h2>

    <form asp-action="AddEvent" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Event Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Time</label>
            <input asp-for="Time" type="time" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Choose Image</label>
            <input type="file" id="imageFile" class="form-control" accept="image/*" />
            <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Save Event</button>
    </form>
</div>

<script>
document.getElementById("imageFile").addEventListener("change", function (e) {
    const file = e.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onloadend = function () {
            document.getElementById("ImageUrl").value = reader.result;
        };
        reader.readAsDataURL(file);
    }
});
</script>
