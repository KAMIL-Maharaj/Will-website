@model Alabaster.Models.UpcomingEvent

<style>
/* Full background with overlay */
body {
    background: url('../images/Background5.jpg') no-repeat center center fixed;
    background-size: cover;
    margin: 0;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    color: #fff;
}

/* Overlay */
body::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(2px);
    z-index: -1;
}

.event-form-container {
    max-width: 410px; /* 455 → ~410 */
    margin: 63px auto 32px; /* 70px → 63px, 35px → 32px */
    padding: 25px; /* 28px → 25px */
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(15px);
    border-radius: 12.5px; /* 14px → ~12.5px */
    box-shadow: 0 7.5px 22px rgba(0,0,0,0.6); /* slightly reduced */
    color: #fff;
}

h2 {
    text-align: center;
    font-weight: 900;
    margin-bottom: 19px; /* 21px → 19px */
    color: #ffffff;
    text-transform: uppercase;
    text-shadow: 1.25px 1.25px 5px rgba(0,0,0,0.7);
    letter-spacing: 0.9px; /* 1px → 0.9px */
    font-size: 1.35rem; /* slightly smaller heading */
}

label {
    font-weight: 600;
    margin-bottom: 4.5px;
    display: block;
    color: #f5f5f5;
    font-size: 0.8rem; /* slightly smaller */
}

.form-control {
    width: 100%;
    padding: 7px 9px; /* 8px 10px → 7px 9px */
    font-size: 0.63rem; /* 0.7rem → ~0.63rem */
    border-radius: 7px; /* 8px → 7px */
    border: none;
    margin-bottom: 12px; /* 14px → 12px */
    box-shadow: 0 1.9px 5px rgba(0,0,0,0.25);
    transition: all 0.3s ease;
}

.form-control:focus {
    border: 1.25px solid #00c6ff; /* 1.4px → ~1.25px */
    box-shadow: 0 0 6.3px rgba(0,198,255,0.7);
    outline: none;
}

.btn-primary {
    display: block;
    width: 100%;
    background: linear-gradient(135deg, #0072ff, #00c6ff);
    border: none;
    border-radius: 19px; /* 21px → ~19px */
    padding: 9px; /* 10px → 9px */
    font-weight: 700;
    font-size: 0.75rem; /* 0.84rem → ~0.75rem */
    color: #fff;
    text-transform: uppercase;
    box-shadow: 0 6px 16px rgba(0, 198, 255, 0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 9px 25px rgba(0, 198, 255, 0.8);
}

/* Responsive */
@@media (max-width: 640px) {
    .event-form-container {
        margin: 38px 9px; /* reduced */
        padding: 15px; /* reduced */
    }

    h2 {
        font-size: 1rem; /* smaller for mobile */
    }
}
</style>

<div class="event-form-container">
    <h2>Add New Event</h2>

    <form asp-action="AddEvent" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Event Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Time</label>
            <input asp-for="Time" type="time" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Choose Image</label>
            <input type="file" id="imageFile" class="form-control" accept="image/*" />
            <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Save Event</button>
    </form>
</div>

<script>
document.getElementById("imageFile").addEventListener("change", function (e) {
    const file = e.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onloadend = function () {
            document.getElementById("ImageUrl").value = reader.result;
        };
        reader.readAsDataURL(file);
    }
});
</script>
