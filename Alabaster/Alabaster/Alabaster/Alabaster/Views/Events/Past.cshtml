@model List<Alabaster.Models.UpcomingEvent>

@{
    ViewData["Title"] = "Past Events";
}

<style>
/* ========== GLOBAL STYLES ========== */
body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: cover;
    background-color: #000;
    color: #fff;
    margin: 0;
    padding: 0;
    
}


/* ========== PAGE CONTAINER ========== */
.page-overlay {
    padding: 80px 15px 40px; /* reduced bottom padding */
    position: relative;
    z-index: 1;
}

.page-overlay::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.55);
    z-index: -1;
}

/* ========== HEADING ========== */
.page-overlay h2 {
    font-size: 3rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 40px;
    letter-spacing: 1.5px;
    background: linear-gradient(90deg, #ffb347, #ffcc33, #fff2a8);
    -webkit-background-clip: text;
    color: transparent;
    background-clip: text;
    background-size: 200% auto;
    animation: shimmer 5s linear infinite;
    text-shadow: 0 0 25px rgba(255, 204, 0, 0.3);
    text-transform: uppercase;
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* ========== BUTTONS ========== */
.top-button {
    display: inline-block;
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #000;
    border: none;
    border-radius: 30px;
    padding: 12px 28px;
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 0 15px rgba(255, 165, 0, 0.4);
    margin-bottom: 30px;
}

.top-button:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.6);
    color: #000;
}

/* ========== EVENT CARDS ========== */
.event-card {
    border: none;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.7);
    overflow: hidden;
    transition: all 0.4s ease;
    transform: translateY(20px);
    opacity: 0;
}

.event-card.visible {
    transform: translateY(0);
    opacity: 1;
    transition: all 0.7s ease;
}

.event-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 25px 50px rgba(255, 215, 0, 0.3);
}

/* ========== IMAGE ========== */
.image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 65%;
    overflow: hidden;
}

.image-wrapper img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.5s ease;
    filter: brightness(0.9) contrast(1.1);
}

.event-card:hover img {
    transform: scale(1.08);
    filter: brightness(1.05);
}

/* ========== CARD BODY ========== */
.card-body {
    padding: 25px;
    text-align: center;
}

.card-body h5 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 15px;
    color: #fff;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
}

.card-body p {
    font-size: 1.1rem;
    color: #f1f1f1;
    line-height: 1.7;
    margin-bottom: 10px;
}

.card-body strong {
    color: #FFD700;
}

/* ========== ADMIN DELETE BUTTON ========== */
.btn-danger {
    border-radius: 25px;
    padding: 6px 14px;
    font-weight: 700;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.btn-danger:hover {
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(255, 80, 80, 0.6);
}

/* ========== RESPONSIVE ========== */
@@media (max-width: 992px) {
    .page-overlay h2 { font-size: 2.5rem; }
}

@@media (max-width: 768px) {
    .page-overlay h2 { font-size: 2rem; }
    .card-body h5 { font-size: 1.3rem; }
    .card-body p { font-size: 1rem; }
}
</style>

@section Scripts {
<script>
    // Smooth fade-in for cards
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) entry.target.classList.add('visible');
        });
    }, { threshold: 0.2 });

    document.querySelectorAll('.event-card').forEach(card => observer.observe(card));
</script>
}

<div class="page-overlay">
    <div class="container text-center">
        <h2>ðŸ•Š Past Events & Memories ðŸ•Š</h2>
        <a href="@Url.Action("Index", "Events")" class="top-button">â¬… Back to Upcoming Events</a>

        @if (Model != null && Model.Any())
        {
            <div class="row mt-4">
                @foreach (var evt in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card event-card">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <div class="image-wrapper">
                                    <img src="@evt.ImageUrl" alt="@evt.Name" />
                                </div>
                            }
                            <div class="card-body">
                                <h5>@evt.Name</h5>
                                <p>@evt.Description</p>
                                <p><strong>Date:</strong> @(DateTime.TryParse(evt.Date, out var dt) ? dt.ToString("MMMM dd, yyyy") : evt.Date)</p>
                                <p><strong>Time:</strong> @evt.Time</p>

                                @if (Context.Session.GetString("IsAdmin") == "true")
                                {
                                    <form asp-action="DeleteEvent" method="post" style="display:inline;">
                                        <input type="hidden" name="eventId" value="@evt.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm mt-2" onclick="return confirm('Are you sure you want to delete this past event?');">
                                            ðŸ—‘ Delete
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-4">
                No past events available at the moment.
            </div>
        }
    </div>
</div>
