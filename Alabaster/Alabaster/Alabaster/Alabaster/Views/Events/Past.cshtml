@model List<Alabaster.Models.UpcomingEvent>

@{
    ViewData["Title"] = "Past Events";
}

<style>
    /* Full background image without dark overlay */
    body {
        background: url('../images/Background4.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        color: #fff;
    }

    /* Transparent page overlay for padding */
    .page-overlay {
        min-height: 100vh;
        padding: 35px 14px; /* 50px 20px -> scaled */
        background: transparent; /* Remove dark overlay */
    }

    /* Page heading */
    .page-overlay h2 {
        font-size: 2.1rem; /* 3rem -> scaled */
        font-weight: 900;
        text-align: center;
        margin-bottom: 28px; /* 40px -> scaled */
        color: #ffffff;
        text-shadow: 1.4px 1.4px 7px rgba(0,0,0,0.6); /* scaled */
    }

    /* Back button */
    .btn-back {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        color: white;
        border-radius: 21px; /* 30px -> scaled */
        padding: 7px 17px; /* 10px 25px -> scaled */
        font-weight: 700;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: inline-block;
        margin-bottom: 21px; /* 30px -> scaled */
    }
    .btn-back:hover {
        transform: translateY(-2px); /* 3px -> scaled */
        box-shadow: 0 5.6px 14px rgba(0,0,0,0.5); /* scaled */
        color: white;
        text-decoration: none;
    }

    /* Event cards */
    .event-card {
        border: none;
        border-radius: 14px; /* 20px -> scaled */
        overflow: hidden;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        box-shadow: 0 7px 17px rgba(0,0,0,0.4); /* 10px 25px -> scaled */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: #fff;
    }
    .event-card:hover {
        transform: translateY(-7px); /* 10px -> scaled */
        box-shadow: 0 14px 28px rgba(0,0,0,0.6); /* scaled */
    }

    /* Image wrapper to show full image */
    .image-wrapper {
        width: 100%;
        height: 175px; /* 250px -> scaled */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .image-wrapper img {
        width: auto;
        max-height: 100%;
        display: block;
    }

    /* Card body */
    .card-body h5 {
        font-size: 1.05rem; /* 1.5rem -> scaled */
        font-weight: 800;
        margin-bottom: 7px; /* 10px -> scaled */
        color: #ffffff;
        text-shadow: 0.7px 0.7px 3.5px rgba(0,0,0,0.5); /* scaled */
    }
    .card-body p {
        font-size: 0.77rem; /* 1.1rem -> scaled */
        margin-bottom: 3.5px; /* 5px -> scaled */
        color: #e0e0e0;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .page-overlay h2 {
            font-size: 1.75rem; /* 2.5rem -> scaled */
        }
        .btn-back {
            margin-bottom: 14px; /* 20px -> scaled */
        }
    }
    @@media (max-width: 768px) {
        .page-overlay h2 {
            font-size: 1.4rem; /* 2rem -> scaled */
        }
    }
</style>

<div class="page-overlay">
    <div class="container">
        <h2>ðŸ“œ Past Events</h2>

        <a href="@Url.Action("Index", "Events")" class="btn btn-back">â¬… Back to Upcoming Events</a>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var evt in Model)
                {
                    <div class="col-md-4 mb-2.8"> <!-- 4rem ~ 30% smaller -->
                        <div class="card event-card shadow-lg">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <div class="image-wrapper">
                                    <img src="@evt.ImageUrl" alt="@evt.Name" />
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@evt.Name</h5>
                                <p class="card-text">@evt.Description</p>
                                <p><strong>Date:</strong> @evt.Date</p>
                                <p><strong>Time:</strong> @evt.Time</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center text-white-50">
                No past events found.
            </div>
        }
    </div>
</div>
