@model List<Alabaster.Models.UpcomingEvent>

@{
    ViewData["Title"] = "Past Events";
}

<style>
    /* Full background image without dark overlay */
    body {
        background: url('../images/Background4.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        color: #fff;
    }

    /* Transparent page overlay for padding */
    .page-overlay {
        min-height: 100vh;
        padding: 50px 20px;
        background: transparent; /* Remove dark overlay */
    }

    /* Page heading */
    .page-overlay h2 {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 40px;
        color: #ffffff;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.6);
    }

    /* Back button */
    .btn-back {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        color: white;
        border-radius: 30px;
        padding: 10px 25px;
        font-weight: 700;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: inline-block;
        margin-bottom: 30px;
    }
    .btn-back:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.5);
        color: white;
        text-decoration: none;
    }

    /* Event cards */
    .event-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.4);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: #fff;
    }
    .event-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.6);
    }

    /* Image wrapper to show full image */
    .image-wrapper {
        width: 100%;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .image-wrapper img {
        width: auto;
        max-height: 100%;
        display: block;
    }

    /* Card body */
    .card-body h5 {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 10px;
        color: #ffffff;
        text-shadow: 1px 1px 5px rgba(0,0,0,0.5);
    }
    .card-body p {
        font-size: 1.1rem;
        margin-bottom: 5px;
        color: #e0e0e0;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .page-overlay h2 {
            font-size: 2.5rem;
        }
        .btn-back {
            margin-bottom: 20px;
        }
    }
    @@media (max-width: 768px) {
        .page-overlay h2 {
            font-size: 2rem;
        }
    }
</style>

<div class="page-overlay">
    <div class="container">
        <h2 >ðŸ“œ Past Events</h2>

        <a href="@Url.Action("Index", "Events")" class="btn btn-back">â¬… Back to Upcoming Events</a>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var evt in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card event-card shadow-lg">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <div class="image-wrapper">
                                    <img src="@evt.ImageUrl" alt="@evt.Name" />
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@evt.Name</h5>
                                <p class="card-text">@evt.Description</p>
                                <p><strong>Date:</strong> @evt.Date</p>
                                <p><strong>Time:</strong> @evt.Time</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center text-white-50">
                No past events found.
            </div>
        }
    </div>
</div>
