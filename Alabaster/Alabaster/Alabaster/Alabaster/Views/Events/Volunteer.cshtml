@model Alabaster.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
/* ðŸŒŒ Global Styles */
body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background: url('../images/jesus10.png') center center no-repeat fixed;
    background-size: cover;
    background-color: #000;
    color: #fff;
    margin: 0;
    padding: 0;
}

/* âœ¨ Page Overlay */
.page-overlay {
    position: relative;
    padding: 80px 20px;
    z-index: 1;
}

.page-overlay::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.65); /* darker overlay for readability */
    z-index: -1;
}

/* ðŸ•Š Heading (matches Past Events) */
.page-overlay h2 {
    font-size: 3rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 40px;
    text-transform: uppercase;
    letter-spacing: 2px;
    background: linear-gradient(90deg, #ffb347, #ffcc33, #fff2a8);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
    animation: shimmer 6s linear infinite;
    text-shadow: 0 0 25px rgba(255, 204, 0, 0.3);
}

@@keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

/* ðŸŒŸ Volunteer Card */
.volunteer-container {
    max-width: 720px; /* 20% wider */
    margin: 0 auto;
    padding: 40px 35px;
    border-radius: 20px;
    background: rgba(15, 15, 15, 0.75);
    backdrop-filter: blur(18px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.75);
    animation: fadeUp 0.8s ease;
    transform: translateY(0);
}

@@keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}

/* ðŸ§¾ Labels & Inputs */
label {
    font-weight: 600;
    color: #fff;
    margin-bottom: 5px;
    display: block;
    font-size: 1rem;
}

.form-control {
    width: 100%;
    padding: 12px 15px;
    border-radius: 12px;
    border: none;
    background: rgba(255, 255, 255, 0.9);
    color: #111;
    font-size: 1rem;
    margin-bottom: 15px;
    box-shadow: inset 0 2px 6px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
}

.form-control:focus {
    border: 2px solid #FFD700;
    box-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
}

/* ðŸª¶ Button */
.btn-success {
    width: 100%;
    padding: 14px 0;
    border: none;
    border-radius: 35px;
    background: linear-gradient(135deg, #FFD700, #FFA500, #FFB347);
    font-weight: 800;
    font-size: 1.1rem;
    text-transform: uppercase;
    color: #000;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(255, 200, 0, 0.4);
    transition: all 0.3s ease;
}

.btn-success:hover {
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 10px 25px rgba(255, 220, 50, 0.6);
}

/* âœ… Alert */
.alert-success {
    background: rgba(0, 200, 100, 0.15);
    border: 1px solid #00ff7f;
    color: #afffaf;
    text-align: center;
    font-weight: 600;
    padding: 12px;
    border-radius: 12px;
    margin-bottom: 20px;
}

/* ðŸ“± Responsive */
@@media (max-width: 768px) {
    .volunteer-container {
        padding: 25px 20px;
        margin: 0 10px;
    }

    .page-overlay h2 {
        font-size: 2.3rem;
    }
}
</style>

<div class="page-overlay">
    <div class="volunteer-container">
        <h2>ðŸ™Œ Volunteer for an Event ðŸ™Œ</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert-success">@TempData["Message"]</div>
        }

        <form asp-action="Volunteer" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Select Event</label>
                <select asp-for="EventId" class="form-control">
                    <option value="">-- Select Event --</option>
                    @foreach (var evt in (List<Alabaster.Models.UpcomingEvent>)ViewBag.Events)
                    {
                        <option value="@evt.Id" selected="@(Model.EventId == evt.Id)">
                            @evt.Name (@evt.Date)
                        </option>
                    }
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>ID Number</label>
                    <input asp-for="IdNumber" class="form-control" maxlength="13" pattern="\d{13}" />
                    <span asp-validation-for="IdNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input asp-for="Phone" class="form-control" maxlength="10" pattern="\d{10}" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label>Notes / Allergies (optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Number of Volunteers</label>
                <input asp-for="NumberOfVolunteers" type="number" class="form-control" min="1" value="1" />
                <span asp-validation-for="NumberOfVolunteers" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-success">Submit</button>
        </form>
    </div>
</div>
