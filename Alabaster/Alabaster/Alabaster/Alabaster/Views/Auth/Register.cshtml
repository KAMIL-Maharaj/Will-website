@{
    ViewData["Title"] = "Register";
}

<style>
body {
    background: url('@Url.Content("~/Images/Background2.png")') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 11px;
}

.main-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 80px);
    padding-top: 70px;
    padding-bottom: 42px;
}

.auth-container {
    display: flex;
    background-color: #fff;
    border-radius: 21px;
    box-shadow: 0 17px 35px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    max-width: 700px;
    width: 100%;
    margin: auto;
    min-height: 490px;
}

.auth-form {
    padding: 42px 42px;
    flex: 1;
}

.auth-image {
    flex: 1;
    background: url('@Url.Content("~/Images/logo.jpg")') center center no-repeat;
    background-size: contain;
    background-color: #ffffff;
    min-height: 490px;
    padding: 21px;
    border-left: 1px solid #e5e7eb;
}

.auth-title {
    font-size: 22px;
    font-weight: 900;
    color: #047857;
    margin-bottom: 21px;
    text-align: center;
}

label.form-label {
    font-weight: 700;
    font-size: 0.8rem;
}

input.form-control {
    font-size: 0.7rem;
    padding: 7px 8px;
    border-radius: 6px;
}

.form-control:focus {
    border-color: #22c55e;
    box-shadow: 0 0 0 0.21rem rgba(34, 197, 94, 0.3);
}

button.btn-success {
    background-color: #16a34a;
    border-color: #16a34a;
    font-size: 0.8rem;
    padding: 8px 0;
    border-radius: 7px;
    font-weight: 700;
    transition: background-color 0.3s ease;
}

button.btn-success:hover {
    background-color: #15803d;
    border-color: #15803d;
}

.link-custom {
    color: #16a34a;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.75rem;
}

.link-custom:hover {
    text-decoration: underline;
}

.text-center {
    text-align: center;
    font-size: 0.75rem;
    margin-top: 14px;
}

.alert {
    font-size: 0.65rem;
    margin-top: 14px;
    padding: 10px 14px;
    border-radius: 7px;
}

/* Responsive */
@@media (max-width: 768px) {
    .auth-container {
        flex-direction: column;
        max-width: 90vw;
        min-height: auto;
    }

    .auth-image {
        height: 245px;
        border-left: none;
        border-top: 1px solid #e5e7eb;
        padding: 14px;
        min-height: auto;
    }

    .main-wrapper {
        padding-top: 70px;
    }

    .auth-form {
        padding: 28px 21px;
    }

    .auth-title {
        font-size: 20px;
        margin-bottom: 18px;
    }

    label.form-label,
    .link-custom,
    .text-center {
        font-size: 0.7rem;
    }

    input.form-control {
        font-size: 0.65rem;
        padding: 7px 8px;
    }

    button.btn-success {
        font-size: 0.7rem;
        padding: 6px 0;
    }
}
</style>

<div class="main-wrapper">
    <div class="auth-container">
        <div class="auth-form">
            <h3 class="auth-title">Create Your Account üìù</h3>

            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password (min 6 chars, uppercase, lowercase, number, special char)" required />
                    <small class="text-muted">Password must have uppercase, lowercase, number, and special character.</small>
                </div>
                <button type="submit" class="btn btn-success w-100">Register</button>
            </form>

            <div class="text-center mt-3">
                <span class="text-muted">Already have an account?
                    <a class="link-custom" href="/Auth/Login">Login</a>
                </span>
            </div>
        </div>

        <div class="auth-image d-none d-md-block"></div>
    </div>
</div>