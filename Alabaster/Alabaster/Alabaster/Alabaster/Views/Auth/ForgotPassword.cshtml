@{
    ViewData["Title"] = "Forgot Password";
}

<style>
body {
    background: url('@Url.Content("~/Images/Background2.png")') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 11px;
}

.main-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 80px);
    padding-top: 70px;
    padding-bottom: 40px;
}

.auth-card {
    background: #ffffff;
    border-radius: 14px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    padding: 1.4rem !important;
}

.auth-card:hover {
    transform: translateY(-3px);
}

.auth-title {
    font-weight: 700;
    color: #92400e;
    font-size: 1.2rem;
    margin-bottom: 1rem;
    text-align: center;
}

.form-label {
    font-weight: 600;
    font-size: 0.9rem;
}

.form-control {
    font-size: 0.9rem;
    padding: 0.4rem 0.65rem;
    border-radius: 6px;
}

.form-control:focus {
    box-shadow: 0 0 0 0.15rem rgba(251, 191, 36, 0.25);
    border-color: #fbbf24;
}

.btn-warning {
    background-color: #f59e0b;
    border-color: #f59e0b;
    color: white;
    font-size: 0.9rem;
    padding: 0.45rem 0.8rem;
    border-radius: 0.35rem;
    font-weight: 600;
    transition: background-color 0.3s ease;
}

.btn-warning:hover {
    background-color: #d97706;
    border-color: #d97706;
}

.link-custom {
    color: #92400e;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
}

.link-custom:hover {
    text-decoration: underline;
}

.alert {
    font-size: 0.85rem;
    padding: 0.5rem 0.75rem;
    margin-top: 0.5rem;
}

@@media (max-width: 768px) {
    .auth-card {
        padding: 1rem !important;
    }

    .auth-title {
        font-size: 1.1rem;
    }

    .form-label, .link-custom {
        font-size: 0.8rem;
    }

    .form-control {
        font-size: 0.85rem;
    }

    .btn-warning {
        font-size: 0.85rem;
        padding: 0.35rem 0.7rem;
    }
}
</style>

<div class="main-wrapper">
    <div class="auth-card col-md-5 col-lg-4">
        <h4 class="auth-title">Reset Your Password üîê</h4>

        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email address" required />
            </div>
            <button type="submit" class="btn btn-warning w-100">Send Reset Link</button>
        </form>

        <div class="mt-3 text-center">
            <a class="link-custom" href="/Auth/Login">Back to Login</a>
        </div>
    </div>
</div>
