@{
    ViewData["Title"] = "Forgot Password";
}

<style>
body {
    background: url('@Url.Content("~/Images/Background2.png")') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 11px; /* was 16px */
}

.auth-card {
    background: #ffffff;
    border-radius: 14px; /* was 20px */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* softer */
    transition: transform 0.2s ease-in-out;
    padding: 1.4rem !important; /* was 2rem */
}

.auth-card:hover {
    transform: translateY(-3px); /* smaller hover */
}

.btn-warning {
    background-color: #f59e0b;
    border-color: #f59e0b;
    color: white;
    font-size: 0.9rem; /* scaled down */
    padding: 0.45rem 0.8rem; /* smaller */
    border-radius: 0.35rem;
}

.btn-warning:hover {
    background-color: #d97706;
    border-color: #d97706;
}

.form-control {
    font-size: 0.9rem; /* smaller input text */
    padding: 0.4rem 0.65rem; /* smaller padding */
}

.form-control:focus {
    box-shadow: 0 0 0 0.15rem rgba(251, 191, 36, 0.25);
    border-color: #fbbf24;
}

.form-label {
    font-weight: 600;
    font-size: 0.9rem;
}

.auth-title {
    font-weight: 700;
    color: #92400e;
    font-size: 1.2rem; /* was bigger */
}

.link-custom {
    color: #92400e;
    text-decoration: none;
    font-size: 0.85rem;
}

.link-custom:hover {
    text-decoration: underline;
}

/* ALERTS */
.alert {
    font-size: 0.85rem;
    padding: 0.5rem 0.75rem;
}
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4"> <!-- narrower card -->
            <div class="card auth-card">
                <div class="card-body">
                    <h4 class="card-title text-center auth-title mb-3">Reset Your Password üîê</h4>

                    <form method="post">
                        <div class="mb-2">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email address" required />
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Send Reset Link</button>
                    </form>

                    <div class="mt-2 text-center">
                        <a class="link-custom" href="/Auth/Login">Back to Login</a>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                    {
                        <div class="alert alert-success mt-2">@ViewBag.Message</div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                    {
                        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
