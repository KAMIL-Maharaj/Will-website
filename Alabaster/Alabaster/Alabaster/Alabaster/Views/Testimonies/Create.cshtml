@{
    ViewBag.Title = "Share Your Testimony";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 0.7rem; /* scaled down ~30% */
        }

        body {
            background: url('../images/Background5.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.55);
            z-index: 0;
        }

        .create-page-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 70vh; /* scaled from 100vh */
            padding: 1.4rem; /* scaled from 2rem */
            position: relative;
            z-index: 1;
        }

        .create-testimony-form {
            width: 100%;
            max-width: 455px; /* 650px -> 30% smaller */
            padding: 2.1rem 1.75rem; /* 3rem 2.5rem -> scaled */
            background: rgba(255, 255, 255, 0.97);
            border-radius: 0.84rem; /* 1.2rem -> scaled */
            box-shadow: 0 17.5px 42px rgba(0, 0, 0, 0.3); /* 25px 60px -> scaled */
            backdrop-filter: blur(10px);
            animation: fadeIn 0.9s ease;
        }

        .create-testimony-form h2 {
            text-align: center;
            font-size: 1.68rem; /* 2.4rem -> scaled */
            font-weight: 800;
            color: #2c3e50;
            margin-bottom: 1.4rem; /* 2rem -> scaled */
            letter-spacing: 0.7px; /* 1px -> scaled */
        }

        .form-group {
            margin-bottom: 1.05rem; /* 1.5rem -> scaled */
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.42rem; /* 0.6rem -> scaled */
            color: #34495e;
        }

        .form-group input[type="text"],
        .form-group textarea,
        .form-group input[type="file"] {
            width: 100%;
            padding: 0.595rem 0.7rem; /* 0.85rem 1rem -> scaled */
            font-size: 0.7rem; /* 1rem -> scaled */
            border: 1px solid #d1d1d1;
            border-radius: 0.42rem; /* 0.6rem -> scaled */
            outline: none;
            transition: all 0.3s ease;
            background: #fff;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #5c8df6;
            box-shadow: 0 0 4.2px rgba(92, 141, 246, 0.4); /* 6px -> scaled */
        }

        .form-group textarea {
            resize: vertical;
            min-height: 112px; /* 160px -> scaled */
        }

        .btn-submit {
            display: block;
            width: 100%;
            padding: 0.7rem; /* 1rem -> scaled */
            font-size: 0.84rem; /* 1.2rem -> scaled */
            font-weight: 700;
            color: #fff;
            background: linear-gradient(to right, #5c8df6, #6b60ec);
            border: none;
            border-radius: 0.42rem; /* 0.6rem -> scaled */
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.7px; /* 1px -> scaled */
        }

        .btn-submit:hover {
            background: linear-gradient(to right, #4a7cf0, #5849de);
            transform: translateY(-2.1px); /* 3px -> scaled */
            box-shadow: 0 8.4px 17.5px rgba(0,0,0,0.3); /* scaled */
        }

        .btn-submit:active {
            transform: scale(0.97);
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(14px); } /* 20px -> scaled */
            to { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 768px) {
            .create-testimony-form {
                padding: 1.4rem 1.05rem; /* 2rem 1.5rem -> scaled */
            }

            .create-testimony-form h2 {
                font-size: 1.4rem; /* 2rem -> scaled */
            }
        }
    </style>
}

<div class="create-page-container">
    <div class="create-testimony-form">
        <h2>Share Your Testimony</h2>

        <form asp-controller="Testimonies" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Title</label>
                <input id="Title" name="Title" type="text" required placeholder="Give your testimony a title" />
            </div>

            <div class="form-group">
                <label for="ImageUpload">Upload Image (optional)</label>
                <input id="ImageUpload" name="ImageUpload" type="file" accept="image/*" />
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea id="Description" name="Description" required placeholder="Write about your experience, transformation, or message..."></textarea>
            </div>

            <button type="submit" class="btn-submit">Submit Testimony</button>
        </form>
    </div>
</div>
