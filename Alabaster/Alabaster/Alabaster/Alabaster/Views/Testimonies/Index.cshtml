@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../images/Background4.jpg') center center / cover no-repeat fixed;
            font-family: 'Poppins', Arial, sans-serif;
            color: #fff;
            min-height: 100vh;
            font-size: 0.7rem; /* scaled down ~30% */
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            z-index: -1;
        }

        .page-content {
            padding-bottom: 3.5rem; /* 5rem -> scaled */
        }

        /* HERO SECTION */
        .hero {
            width: 100%;
            height: 266px; /* 380px -> scaled */
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2.8rem; /* 4rem -> scaled */
            text-align: center;
        }

        .hero-content {
            max-width: 560px; /* 800px -> scaled */
            padding: 0.7rem; /* 1rem -> scaled */
            color: #fff;
        }

        .hero-content h1 {
            font-size: 2.45rem; /* 3.5rem -> scaled */
            font-weight: 900;
            letter-spacing: 1.4px; /* 2px -> scaled */
            margin-bottom: 0.7rem; /* 1rem -> scaled */
            text-transform: uppercase;
            text-shadow: 2.1px 2.1px 8.4px rgba(0,0,0,0.5); /* scaled */
        }

        .hero-content a.hero-cta {
            display: inline-block;
            margin-top: 1.4rem; /* 2rem -> scaled */
            padding: 0.7rem 2.1rem; /* 1rem 3rem -> scaled */
            background: #fff;
            color: #ff9800;
            border-radius: 35px; /* 50px -> scaled */
            font-weight: 700;
            font-size: 0.84rem; /* 1.2rem -> scaled */
            text-decoration: none;
            box-shadow: 0 4.2px 10.5px rgba(0,0,0,0.25); /* 6px 15px -> scaled */
            transition: all 0.3s ease;
        }

        .hero-content a.hero-cta:hover {
            background: #ffcc00;
            color: #333;
            transform: translateY(-2.8px); /* 4px -> scaled */
            box-shadow: 0 7px 17.5px rgba(0,0,0,0.35); /* 10px 25px -> scaled */
        }

        /* SECTION TITLE */
        .section-title {
            text-align: center;
            font-size: 1.96rem; /* 2.8rem -> scaled */
            font-weight: 900;
            margin-bottom: 2.1rem; /* 3rem -> scaled */
            color: #ffcc00;
            text-shadow: 1.4px 1.4px 7px rgba(0,0,0,0.7); /* scaled */
        }

        /* GRID */
        .testimony-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(224px, 1fr)); /* 320px -> scaled */
            gap: 1.75rem; /* 2.5rem -> scaled */
            padding: 0 5.6%; /* 8% -> scaled */
        }

        /* CARD */
        .testimony-card {
            background: #fff;
            border-radius: 0.875rem; /* 1.25rem -> scaled */
            box-shadow: 0 7px 21px rgba(0,0,0,0.25); /* 10px 30px -> scaled */
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 1.4rem 1.05rem; /* 2rem 1.5rem -> scaled */
            color: #333;
            min-height: 315px; /* 450px -> scaled */
            transition: transform 0.35s ease, box-shadow 0.35s ease;
            opacity: 0;
            animation: fadeInUp 0.8s ease forwards;
        }

        .testimony-card:hover {
            transform: translateY(-7px) scale(1.02); /* 10px -> scaled */
            box-shadow: 0 14px 31.5px rgba(0,0,0,0.3); /* 20px 45px -> scaled */
        }

        .testimony-card img {
            width: 100%;
            max-height: 168px; /* 240px -> scaled */
            object-fit: cover;
            border-radius: 0.595rem; /* 0.85rem -> scaled */
            margin-bottom: 1.05rem; /* 1.5rem -> scaled */
        }

        .testimony-card h4 {
            font-size: 1.12rem; /* 1.6rem -> scaled */
            font-weight: 800;
            color: #222;
            margin-bottom: 0.7rem; /* 1rem -> scaled */
        }

        .testimony-card p {
            font-size: 0.7rem; /* 1rem -> scaled */
            color: #555;
            margin-bottom: 1.05rem; /* 1.5rem -> scaled */
            line-height: 1.12;
        }

        .testimony-card small {
            display: block;
            color: #888;
            font-size: 0.63rem; /* 0.9rem -> scaled */
            margin-top: 0.175rem; /* 0.25rem -> scaled */
        }

        /* EMPTY STATE */
        .no-testimonies {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 0.98rem; /* 1.4rem -> scaled */
            color: #ffcc00;
            margin: 2.8rem 0; /* 4rem -> scaled */
        }

        /* Fade-in Animation */
        .testimony-card:nth-child(1) { animation-delay: 0.1s; }
        .testimony-card:nth-child(2) { animation-delay: 0.3s; }
        .testimony-card:nth-child(3) { animation-delay: 0.5s; }

        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(21px); } /* 30px -> scaled */
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}

<div class="page-content">

    <!-- HERO -->
    <div class="hero">
        <div class="hero-content">
            <h1>Testimonies</h1>
            <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">
                Share Your Testimony
            </a>
        </div>
    </div>

    <!-- SECTION TITLE -->
    <h2 class="section-title">Voices From Our Community</h2>

    <!-- TESTIMONIES -->
    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">✨ No testimonies yet. Be the first to inspire others!</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Testimony Image" />
                    }
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>

</div>
