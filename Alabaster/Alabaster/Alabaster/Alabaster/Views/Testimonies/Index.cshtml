@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../images/Background4.jpg') center center / cover no-repeat fixed;
            font-family: 'Poppins', Arial, sans-serif;
            color: #fff;
            min-height: 100vh;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            z-index: -1;
        }

        .page-content {
            padding-bottom: 5rem;
        }

        /* HERO SECTION */
        .hero {
            width: 100%;
            height: 380px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 4rem;
            text-align: center;
        }

        .hero-content {
            max-width: 800px;
            padding: 1rem;
            color: #fff;
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 900;
            letter-spacing: 2px;
            margin-bottom: 1rem;
            text-transform: uppercase;
            text-shadow: 3px 3px 12px rgba(0,0,0,0.5);
        }

        .hero-content a.hero-cta {
            display: inline-block;
            margin-top: 2rem;
            padding: 1rem 3rem;
            background: #fff;
            color: #ff9800;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.2rem;
            text-decoration: none;
            box-shadow: 0 6px 15px rgba(0,0,0,0.25);
            transition: all 0.3s ease;
        }

        .hero-content a.hero-cta:hover {
            background: #ffcc00;
            color: #333;
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.35);
        }

        /* SECTION TITLE */
        .section-title {
            text-align: center;
            font-size: 2.8rem;
            font-weight: 900;
            margin-bottom: 3rem;
            color: #ffcc00;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
        }

        /* GRID */
        .testimony-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2.5rem;
            padding: 0 8%;
        }

        /* CARD */
        .testimony-card {
            background: #fff;
            border-radius: 1.25rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 2rem 1.5rem;
            color: #333;
            min-height: 450px;
            transition: transform 0.35s ease, box-shadow 0.35s ease;
        }

        .testimony-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 20px 45px rgba(0,0,0,0.3);
        }

        .testimony-card img {
            width: 100%;
            max-height: 240px;
            object-fit: cover;
            border-radius: 0.85rem;
            margin-bottom: 1.5rem;
        }

        .testimony-card h4 {
            font-size: 1.6rem;
            font-weight: 800;
            color: #222;
            margin-bottom: 1rem;
        }

        .testimony-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .testimony-card small {
            display: block;
            color: #888;
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        /* EMPTY STATE */
        .no-testimonies {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 1.4rem;
            color: #ffcc00;
            margin: 4rem 0;
        }

        /* Fade-in Animation */
        .testimony-card {
            opacity: 0;
            animation: fadeInUp 0.8s ease forwards;
        }

        .testimony-card:nth-child(1) { animation-delay: 0.1s; }
        .testimony-card:nth-child(2) { animation-delay: 0.3s; }
        .testimony-card:nth-child(3) { animation-delay: 0.5s; }

        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}

<div class="page-content">

    <!-- HERO -->
    <div class="hero">
        <div class="hero-content">
            <h1>Testimonies</h1>
            <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">
                Share Your Testimony
            </a>
        </div>
    </div>

    <!-- SECTION TITLE -->
    <h2 class="section-title">Voices From Our Community</h2>

    <!-- TESTIMONIES -->
    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">✨ No testimonies yet. Be the first to inspire others!</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Testimony Image" />
                    }
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>

</div>
