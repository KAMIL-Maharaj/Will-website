@model IEnumerable<Alabaster.Models.Testimony>
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('../images/Background4.jpg') center center / cover no-repeat fixed;
            font-family: 'Poppins', Arial, sans-serif;
            color: #fff;
            font-size: 0.8rem; /* 25% larger */
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            z-index: -1;
        }

        .page-content {
            padding-bottom: 4rem; /* enough space to prevent overlap with footer */
        }

        /* HERO SECTION */
        .hero {
            width: 100%;
            padding: 1.25rem 0;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .hero-content {
            max-width: 625px;
            padding: 0.63rem;
            color: #fff;
        }

        .hero-content h1 {
            font-size: 2.25rem;
            font-weight: 900;
            margin-bottom: 0.63rem;
            text-transform: uppercase;
            text-shadow: 1.25px 1.25px 7px rgba(0,0,0,0.5);
        }

        .hero-content a.hero-cta {
            display: inline-block;
            margin-top: 1rem;
            padding: 0.5rem 1.25rem;
            background: #fff;
            color: #ff9800;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.88rem;
            text-decoration: none;
            box-shadow: 0 4px 9px rgba(0,0,0,0.25);
            transition: all 0.3s ease;
        }

        .hero-content a.hero-cta:hover {
            background: #ffcc00;
            color: #333;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.35);
        }

        /* SECTION TITLE */
        .section-title {
            text-align: center;
            font-size: 1.6rem;
            font-weight: 900;
            margin-bottom: 1.5rem;
            color: #ffcc00;
            text-shadow: 1.25px 1.25px 6px rgba(0,0,0,0.7);
        }

        /* GRID */
        .testimony-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(225px, 1fr));
            gap: 1.5rem;
            padding: 0 4%;
        }

        /* CARD */
        .testimony-card {
            background: #fff;
            border-radius: 0.63rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.25);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 1rem;
            color: #333;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            opacity: 0;
            animation: fadeInUp 0.6s ease forwards;
        }

        .testimony-card:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 12px 24px rgba(0,0,0,0.3);
        }

        .testimony-card img {
            width: 100%;
            aspect-ratio: 4 / 3; /* keeps images proportional */
            object-fit: cover;
            border-radius: 0.5rem;
            margin-bottom: 0.75rem;
        }

        .testimony-card h4 {
            font-size: 1.1rem;
            font-weight: 800;
            color: #222;
            margin-bottom: 0.5rem;
        }

        .testimony-card p {
            font-size: 0.75rem;
            color: #555;
            margin-bottom: 0.63rem;
            line-height: 1.25;
        }

        .testimony-card small {
            display: block;
            color: #888;
            font-size: 0.7rem;
            margin-top: 0.13rem;
        }

        /* EMPTY STATE */
        .no-testimonies {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 1rem;
            color: #ffcc00;
            margin: 2rem 0;
        }

        /* Fade-in Animation */
        .testimony-card:nth-child(1) { animation-delay: 0.1s; }
        .testimony-card:nth-child(2) { animation-delay: 0.25s; }
        .testimony-card:nth-child(3) { animation-delay: 0.4s; }

        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}


<div class="page-content">

    <!-- HERO -->
    <div class="hero">
        <div class="hero-content">
            <h1>Testimonies</h1>
            <a asp-controller="Testimonies" asp-action="Create" class="hero-cta">
                Share Your Testimony
            </a>
        </div>
    </div>

    <!-- SECTION TITLE -->
    <h2 class="section-title">Voices From Our Community</h2>

    <!-- TESTIMONIES -->
    <div class="testimony-grid">
        @if (!Model.Any())
        {
            <div class="no-testimonies">✨ No testimonies yet. Be the first to inspire others!</div>
        }
        else
        {
            foreach (var item in Model.OrderByDescending(t => t.CreatedAt))
            {
                <div class="testimony-card">
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Testimony Image" />
                    }
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <small>By: @(string.IsNullOrEmpty(item.CreatedBy) ? "Anonymous" : item.CreatedBy)</small>
                    <small>Date: @item.CreatedAt</small>
                </div>
            }
        }
    </div>

</div>
